---
export interface Props {
	username: string;
	repo?: string;
}
const { username, repo } = Astro.props;
const baseUrl = 'https://github-readme-stats.vercel.app/api/';
let url = `${baseUrl}?username=${username}`;

if (repo) {
	url = `${baseUrl}/pin/?username=${username}&repo=${repo}`;
}
---

<img src={url} />
